{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "incremental": true,
        "typeRoots": [
            "../node_modules/@types"
        ],
        "types": [
            "node",
            "jest",
            "mocha"
        ]
    },
    "include": [        
        "**/*.ts",
        "*.ts", "__tests__/unit/test.spec.js",
    ],
    "exclude": [
        "node_modules",
        "__tests__"
    ],
    "strict": true,
    "esModuleInterop": true,
    "buildOnSave": true,
    "compileOnSave": true
}